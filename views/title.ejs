        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const floors = ['floor1', 'floor2', 'floor3'];
                
                floors.forEach(floor => {
                    const lightbulb = document.getElementById(`lightbulb-${floor}`);
                    const switchButton = document.getElementById(`switch-${floor}`);
                    let isOn = floor !== 'floor2';  // เริ่มต้นให้ชั้น 2 ปิดไฟ

                    switchButton.addEventListener('click', function() {
                        isOn = !isOn;
                        if (isOn) {
                            lightbulb.classList.add('text-warning');
                            lightbulb.style.textShadow = '0 0 10px #ffd700';
                            document.getElementById(`${floor}Status`).className = 'badge bg-success';
                            document.getElementById(`${floor}Status`).textContent = 'เปิด';
                        } else {
                            lightbulb.classList.remove('text-warning');
                            lightbulb.style.textShadow = 'none';
                            document.getElementById(`${floor}Status`).className = 'badge bg-danger';
                            document.getElementById(`${floor}Status`).textContent = 'ปิด';
                        }
                        switchButton.classList.add('animate__animated', 'animate__rubberBand');
                        setTimeout(() => switchButton.classList.remove('animate__animated', 'animate__rubberBand'), 1000);
                    });

                    // ตั้งค่าเริ่มต้น
                    if (isOn) {
                        lightbulb.classList.add('text-warning');
                        lightbulb.style.textShadow = '0 0 10px #ffd700';
                    }
                });

                // อัพเดทสถานะเริ่มต้นของชั้น 1 และ 3
                document.getElementById('floor1Status').className = 'badge bg-success';
                document.getElementById('floor1Status').textContent = 'เปิด';
                document.getElementById('floor3Status').className = 'badge bg-success';
                document.getElementById('floor3Status').textContent = 'เปิด';

                
                // เพิ่มเอฟเฟกต์ปุ่มเปิด/ปิดไฟทั้งหมด
                const toggleAllButton = document.getElementById('toggleAllLights');
                toggleAllButton.addEventListener('click', () => {
                    floors.forEach(floor => {
                        const lightbulb = document.getElementById(`lightbulb-${floor}`);
                        const status = document.getElementById(`${floor}Status`);
                        if (lightbulb.classList.contains('text-warning')) {
                            lightbulb.classList.remove('text-warning');
                            lightbulb.style.textShadow = 'none';
                            status.className = 'badge bg-danger';
                            status.textContent = 'ปิด';
                        } else {
                            lightbulb.classList.add('text-warning');
                            lightbulb.style.textShadow = '0 0 10px #ffd700';
                            status.className = 'badge bg-success';
                            status.textContent = 'เปิด';
                        }
                    });
                    toggleAllButton.classList.add('animate__animated', 'animate__pulse');
                    setTimeout(() => toggleAllButton.classList.remove('animate__animated', 'animate__pulse'), 1000);
                });
            });
        </script>


