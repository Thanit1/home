                        function updatePinDropdown(boardId, switches) {
                            const pinDropdown = document.getElementById(`pinid${boardId}`);
                            const usedPins = switches.map(switchItem => switchItem.pin);

                            // เคลียร์ตัวเลือกทั้งหมดยกเว้นตัวเลือกแรก (เลือกพิน)
                            while (pinDropdown.options.length > 1) {
                                pinDropdown.remove(1);
                            }

                            // เพิ่มตัวเลือกสำหรับพินที่ยังไม่ถูกใช้
                            [1, 2, 3].forEach(pin => {
                                if (!usedPins.includes(pin)) {
                                    const option = document.createElement('option');
                                    option.value = pin;
                                    option.textContent = `พิน ${pin}`;
                                    pinDropdown.appendChild(option);
                                }
                            });
                        }
                        /* ส่วนของการสร้างtoken */
                        async function generateToken() {
                            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
                            const tokenLength = 25;
                            let token = generateUniqueToken(characters, tokenLength);
                            document.getElementById('tokenboard').value = token;
                        }

                        function generateUniqueToken(characters, length) {
                            let token = '';
                            for (let i = 0; i < length; i++) {
                                const randomIndex = Math.floor(Math.random() * characters.length);
                                token += characters.charAt(randomIndex);
                            }
                            return token;
                        }
                        function copyTokenToClipboard(token) {
                            navigator.clipboard.writeText(token).then(function () {
                                alert('คัดลอกโทเค็นเรียบร้อยแล้ว');
                            }, function (err) {
