              <h4 class="fw-bold text-primary text-center mb-3">
                <i class="bi bi-graph-up-arrow me-2 text-success"></i>การใช้พลังงานของแต่ละบอร์ด<i
                  class="bi bi-pie-chart-fill ms-2 text-info"></i>
              </h4>
              <div id="totalHoursDisplay" class="text-secondary d-flex flex-wrap justify-content-center gap-2 "
                style="margin-left: 100px;">
                <!-- ข้อมูลการใช้พลังงานจะถูกเพิ่มเข้ามาที่นี่ด้วย JavaScript -->
              </div>
            </div>

            <script>
              // ฟังก์ชันคำนวณชมทั้งหมด
              function calculateTotalHours(data) {
                const tokenUsage = {};

                data.forEach(item => {
                  if (!tokenUsage[item.token]) {
                    tokenUsage[item.token] = { totalMinutes: 0, pins: {} };
                  }
                  tokenUsage[item.token].totalMinutes += item.usage_minutes;

                  if (!tokenUsage[item.token].pins[item.pin]) {
                    tokenUsage[item.token].pins[item.pin] = 0;
                  }
                  tokenUsage[item.token].pins[item.pin] += item.usage_minutes;
                });

                return tokenUsage;
              }

              // ฟังก์ชันแสดงผลชมทั้งหมด
              function displayTotalHours(tokenUsage, boardNameMap) {
                const container = document.getElementById('totalHoursDisplay');
                container.innerHTML = '';

                const colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#FFA07A', '#98D8C8'];

                Object.keys(tokenUsage).forEach((token, index) => {
                  const totalHours = (tokenUsage[token].totalMinutes / 60).toFixed(2);
                  const boardName = boardNameMap.get(token);
                  const tokenDiv = document.createElement('div');
                  tokenDiv.classList.add('mb-3', 'col-sm-6', 'col-lg-3');
                  const color = colors[index % colors.length];
                  tokenDiv.innerHTML = `
              <div class="card h-100 shadow-sm border-0" style="transition: all 0.3s; max-width: 250px;">
                <div class="card-body" style="background-color: ${color}; color: white; border-radius: 10px 10px 0 0;">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <h5 class="fw-bold">${boardName}</h5>
                      <p class="subtitle text-sm mb-0">ใช้ไป ${totalHours} ชม</p>
                    </div>
                    <div>
                      <i class="bi bi-lightning-charge" style="font-size: 2rem;"></i>
                    </div>
                  </div>
                </div>
                <div class="card-footer py-2 bg-light" style="border-radius: 0 0 10px 10px;">
                  <div class="row align-items-center">
                    <div class="col-12">
                      <button class="btn btn-link p-0 toggle-details" style="color: ${color}; font-size: 0.9rem;" data-token="${token}">ดูรายละเอียดพิน</button>
                    </div>
                  </div>
                  <ul id="pinList-${token}" class="list-group list-group-flush mt-2 d-none"></ul>
                </div>
              </div>
            `;

                  container.appendChild(tokenDiv);

                  const pinList = document.getElementById(`pinList-${token}`);
                  Object.keys(tokenUsage[token].pins).forEach(pin => {
                    const pinHours = (tokenUsage[token].pins[pin] / 60).toFixed(2);
                    const pinItem = document.createElement('li');
                    pinItem.classList.add('list-group-item', 'p-2');
                    const percentage = (pinHours / totalHours * 100).toFixed(2);
                    pinItem.innerHTML = `
                <div class="d-flex align-items-center w-100 ">
