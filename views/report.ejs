        // ฟังก์ชันอัปเดตกราฟ
        function updateChart(data, isMultipleTokens) {
          // ... existing code ...

          // อัปเดตตัวแปร global
          currentTokens = data.map(item => item.token);
          currentStartDate = data[0].timestamp;
          currentEndDate = data[data.length - 1].timestamp;

          const labels = [...new Set(data.map(item => item.timestamp))]; // สร้าง timestamp ที่ไม่ซ้ำกัน

          if (myChart) {
            myChart.destroy(); // ทำลายกราฟเก่า
          }

          const datasets = [];
          const usageDataPerToken = {};

          // จัดกลุ่มข้อมูลตาม Token และ Pin
          data.forEach(item => {
            if (!usageDataPerToken[item.token]) {
              usageDataPerToken[item.token] = {
                pin1: Array(labels.length).fill(0),
                pin2: Array(labels.length).fill(0),
                pin3: Array(labels.length).fill(0),
                boardName: item.boardName,
                totalUsage: { pin1: 0, pin2: 0, pin3: 0 }
              };
            }
            const index = labels.indexOf(item.timestamp);
            if (index !== -1) {
              if (item.pin === 1) {
                usageDataPerToken[item.token].pin1[index] += item.usage_minutes;
                usageDataPerToken[item.token].totalUsage.pin1 += item.usage_minutes;
              } else if (item.pin === 2) {
                usageDataPerToken[item.token].pin2[index] += item.usage_minutes;
                usageDataPerToken[item.token].totalUsage.pin2 += item.usage_minutes;
              } else if (item.pin === 3) {
                usageDataPerToken[item.token].pin3[index] += item.usage_minutes;
                usageDataPerToken[item.token].totalUsage.pin3 += item.usage_minutes;
              }
            }
          });

          // สร้าง datasets สำหรับแต่ละ Token และ Pin
          Object.keys(usageDataPerToken).forEach((token, tokenIndex) => {
            const tokenData = usageDataPerToken[token];
            const boardName = tokenData.boardName || `Token ${token}`;

            ['pin1', 'pin2', 'pin3'].forEach((pin, pinIndex) => {
              datasets.push({
                label: `${boardName} - Pin ${pinIndex + 1}`,
                data: tokenData[pin],
                borderColor: getColorFromPalette(tokenIndex * 3 + pinIndex),
                backgroundColor: getColorFromPalette(tokenIndex * 3 + pinIndex, 0.2),
                borderWidth: 2,
                pointRadius: 3,
                pointHoverRadius: 5,
                fill: true
              });
            });
          });

          const ctx = document.getElementById('myChart').getContext('2d');
          myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: labels,
              datasets: datasets
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              aspectRatio: window.innerWidth < 768 ? 1 : 2,
              plugins: {
                legend: {
                  position: 'top',
                },
                title: {
                  display: true,
                  text: 'การใช้งานแต่ละพินของทุกโทเคน'
                }
              },
              scales: {
                x: {
                  display: true,
                  title: {
                    display: true,
                    text: 'เวลา'
                  }
                },
                y: {
                  display: true,
                  title: {
                    display: true,
                    text: 'ระยะเวลาการใช้งาน (นาที)'
                  },
                  suggestedMin: 0,
                  beginAtZero: true // เริ่มต้นที่ศูนย์
                }
              }
            }
          });

          // อัปเดตตารางหน่วยรวม
          updateTotalUsageTable(usageDataPerToken);
        }

        // ฟังก์ชันเพื่อเลือกสีจากพาเลทที่กำหนดไว้
        function getColorFromPalette(index, alpha = 1) {
          const palette = [
            'rgba(255, 99, 132, ' + alpha + ')',
            'rgba(54, 162, 235, ' + alpha + ')',
            'rgba(255, 206, 86, ' + alpha + ')',
            'rgba(75, 192, 192, ' + alpha + ')',
            'rgba(153, 102, 255, ' + alpha + ')',
            'rgba(255, 159, 64, ' + alpha + ')',
            'rgba(255, 0, 0, ' + alpha + ')',
            'rgba(0, 255, 0, ' + alpha + ')',
            'rgba(0, 0, 255, ' + alpha + ')',
            'rgba(128, 0, 128, ' + alpha + ')',
            'rgba(0, 128, 128, ' + alpha + ')',
            'rgba(128, 128, 0, ' + alpha + ')'
          ];
          return palette[index % palette.length];
        }

        // ฟังก์ชันปรับขนาดกราฟ
        function resizeChart() {
          if (myChart) {
            if (window.innerWidth < 768) {
              myChart.options.aspectRatio = 1;
            } else {
              myChart.options.aspectRatio = 2;
            }
            myChart.update();
          }
        }

        // ฟังก์ชันอัปเดตตารางหน่วยรวม
        function updateTotalUsageTable(usageDataPerToken) {
          const tableBody = document.getElementById('totalUsageTableBody');
          tableBody.innerHTML = ''; // ล้างข้อมูลเก่า

          const sortedData = Object.entries(usageDataPerToken).sort((a, b) => {
            const totalA = Object.values(a[1].totalUsage).reduce((sum, val) => sum + val, 0);
            const totalB = Object.values(b[1].totalUsage).reduce((sum, val) => sum + val, 0);
            return totalB - totalA;
          });

          sortedData.forEach(([token, data], index) => {
            const row = tableBody.insertRow();
            const orderCell = row.insertCell(0);
            const nameCell = row.insertCell(1);
            const pin1Cell = row.insertCell(2);
            const pin2Cell = row.insertCell(3);
            const pin3Cell = row.insertCell(4);
            const totalCell = row.insertCell(5);

            orderCell.textContent = index + 1;
            orderCell.classList.add('text-center');
            nameCell.textContent = data.boardName || `Token ${token}`;

            // แปลงนาทีเป็น kWh (สมมติว่า 1 นาที = 1 วัตต์)
            const pin1kWh = (data.totalUsage.pin1 / 60 / 1000).toFixed(2);
            const pin2kWh = (data.totalUsage.pin2 / 60 / 1000).toFixed(2);
            const pin3kWh = (data.totalUsage.pin3 / 60 / 1000).toFixed(2);
            const totalkWh = ((data.totalUsage.pin1 + data.totalUsage.pin2 + data.totalUsage.pin3) / 60 / 1000).toFixed(2);

            pin1Cell.textContent = `${pin1kWh}`;
            pin2Cell.textContent = `${pin2kWh}`;
            pin3Cell.textContent = `${pin3kWh}`;
            totalCell.textContent = `${totalkWh}`;

            [pin1Cell, pin2Cell, pin3Cell, totalCell].forEach(cell => cell.classList.add('text-end'));

            // เพิ่มเอฟเฟกต์ hover
            row.classList.add('table-row-hover');
          });

          // เพิ่ม DataTable
          if ($.fn.DataTable.isDataTable('#totalUsageTable')) {
            $('#totalUsageTable').DataTable().destroy();
          }
          $('#totalUsageTable').DataTable({
            "pageLength": 5,
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "ทั้งหมด"]],
            "language": {
              "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Thai.json"
            },
            "order": [[5, "desc"]], // เรียงลำดับตามคอลัมน์รวม (index 5) จากมากไปน้อย
            "columnDefs": [
              { "width": "5%", "targets": 0 },
              { "width": "30%", "targets": 1 },
              { "width": "15%", "targets": [2, 3, 4] },
              { "width": "20%", "targets": 5 }
            ],
            "responsive": true,
            "autoWidth": false
          });
        }

        document.addEventListener('DOMContentLoaded', function () {
          const startDateInput = document.getElementById('startDate');
          const endDateInput = document.getElementById('endDate');

          if (startDateInput && endDateInput) {
            const today = new Date().toISOString().split('T')[0];
            startDateInput.value = today;
            endDateInput.value = today;

            // ส่งข้อมูลไปที่เซิร์ฟเวอร์ครั้งแรกที่เข้าหน้านี้
            const tokens = '<%= tokens.map(token => token.token).join(",") %>';
            const url = `/fetch-data?tokens=${tokens}&startDate=${today}&endDate=${today}`;

            fetch(url, {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json'
              }
            })
              .then(response => response.json())
              .then(data => {
                console.log('Data fetched successfully:', data);
                // ตรวจสอบข้อมูลที่ได้รับ
                if (Array.isArray(data) && data.length > 0) {
                  updateChart(data, tokens.includes(',')); // ส่งข้อมูลไปที่ฟังก์ชัน updateChart
                } else {
                  console.error('Invalid data format:', data);
                }
              })
              .catch(error => console.error('Error fetching data:', error));
          }
        });

        let myChart; // ประกาศ myChart เป็นตัวแปร global

        (() => {
          'use strict'

          console.log("JavaScript is loaded!"); // ตรวจสอบว่า JS โหลดถูกต้องหรือไม่

          // เพิ่ม event listener สำหรับการปรับขนาดหน้าจอ
          window.addEventListener('resize', resizeChart);

          // Handle form submission
          document.getElementById('tokenForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Collecting selected tokens from checkboxes
            const tokens = Array.from(document.querySelectorAll('input[name="token"]:checked')).map(checkbox => checkbox.value);
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            console.log("Submitting form with tokens:", tokens, "from start date:", startDate, "to end date:", endDate);

            // Perform an AJAX request to fetch the data
            fetch(`/fetch-data?tokens=${tokens.join(',')}&startDate=${startDate}&endDate=${endDate}`)
              .then(response => response.json())
              .then(data => {
                updateChart(data, tokens.length > 1); // Send flag to check if multiple tokens were selected
              })
              .catch(error => console.error('Error fetching data:', error));
          });

        })();
        // ... existing code ...

        // ... existing code ...
        document.getElementById('exportButton').addEventListener('click', function (e) {
          e.preventDefault();

          const form = document.getElementById('exportForm');
          const formData = new FormData(form);

          const fileType = formData.get('fileType');
          if (!fileType) {
            alert('กรุณาเลือกประเภทไฟล์');
            return;
          }

          // ตรวจสอบว่าโทเคนและช่วงวันที่ถูกต้องหรือไม่
          if (currentTokens.length === 0) {
            alert('กรุณาเลือกโทเคน');
            return;
          }
          if (!currentStartDate || !currentEndDate) {
            alert('กรุณาเลือกช่วงวันที่');
            return;
          }

          console.log('Exporting data with tokens:', currentTokens, 'from', currentStartDate, 'to', currentEndDate);

          // ปิด modal ส่งออก
          const exportModal = bootstrap.Modal.getInstance(document.getElementById('exportModalExport'));
          exportModal.hide();

          // แสดง modal กำลังเตรียมไฟล์
          const preparingFileModal = new bootstrap.Modal(document.getElementById('preparingFileModal'));
          preparingFileModal.show();

          // ส่งข้อมูลไปยัง server
          fetch('/export-data', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              tokens: currentTokens,
              startDate: currentStartDate,
              endDate: currentEndDate,
              fileType: fileType
            })
          })
            .then(response => {
              if (!response.ok) {
                return response.text().then(text => { throw new Error(text) });
              }
              return response.blob();
            })
            .then(blob => {
              // ซ่อน modal กำลังเตรียมไฟล์
              preparingFileModal.hide();

              // สร้าง URL สำหรับไฟล์ที่ดาวน์โหลด
              const url = window.URL.createObjectURL(blob);
              const a = document.createElement('a');
              a.style.display = 'none';
              a.href = url;
              // กำหนดชื่อไฟล์
